

<% if current_user.liked_it?(micropost) %>

  <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html:{method:"delete"}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag(type: 'submit', class: "btn btn-xs btn-warning active") do %>
    <%= fa_icon 'star' %><%= micropost.be_likeds.count %>
    <% end %>
  <% end %>
  
<% else %>

  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag(type: 'submit', class: "btn btn-xs btn-outline-warning") do %>
    <%= fa_icon 'star' %><%= micropost.be_likeds.count %>
    <% end %>
  <% end %>
  
<% end %>

